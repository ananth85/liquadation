# =============================================================================
# LLM Provider Configuration - Copy this to .env and configure your API key
# =============================================================================

# OpenAI Configuration (recommended for best results)
LLM_API_KEY=your_openai_api_key_here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=30

# Alternative: Custom LLM Provider (e.g., local models, other API providers)
# LLM_API_KEY=your_custom_api_key
# LLM_BASE_URL=http://localhost:1234/v1
# LLM_MODEL=your-model-name

# =============================================================================
# Legacy OpenAI (fallback if needed)
# =============================================================================
OPENAI_API_KEY=

# =============================================================================
# External APIs
# =============================================================================
ABN_API_KEY=

# =============================================================================
# Application Directories
# =============================================================================
TEMPLATES_FOLDER=templates
OUTPUT_DIR=output_pdfs
SAMPLE_FOLDER=sample
DATA_FOLDER=data

# =============================================================================
# System Settings
# =============================================================================
LOG_LEVEL=INFO
DEBUG_MODE=false
AUTO_ANALYZE_NEW_PDFS=true
AUTO_GENERATE_TEMPLATES=true
FALLBACK_GENERATION=true

# =============================================================================
# Document Generation Settings
# =============================================================================
USE_UNIQUE_TEMPLATES=true
TEMPLATE_SELECTION_MODE=llm_driven
MAX_TEMPLATE_VARIATIONS=155
DYNAMIC_CONTENT_GENERATION=true

# =============================================================================
# Security & Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=60
ENABLE_CONTENT_FILTERING=true 