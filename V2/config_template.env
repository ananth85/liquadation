# Professional AI Agent System Configuration Template
# Copy this file to '.env' and update with your actual values

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================

# OpenAI API Configuration (REQUIRED for LLM functionality if no internal LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4.1
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Internal LLM Configuration (ALTERNATIVE to OpenAI - for self-hosted models)
INTERNAL_LLM_ENABLED=true
INTERNAL_LLM_API_BASE=http://localhost:8000/v1
INTERNAL_LLM_API_KEY=your_internal_llm_key_here
INTERNAL_LLM_MODEL=llama2-70b-chat
INTERNAL_LLM_MAX_TOKENS=4000
INTERNAL_LLM_TEMPERATURE=0.3
INTERNAL_LLM_TIMEOUT=60

# LLM Provider Selection and Fallback
PRIMARY_LLM_PROVIDER=openai
AUTO_FALLBACK_ENABLED=true
FALLBACK_RETRY_ATTEMPTS=2

# Search API Configuration (OPTIONAL - enables enhanced web search)
SERPAPI_API_KEY=your_serpapi_key_here
DUCKDUCKGO_ENABLED=true
WIKIPEDIA_ENABLED=true

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Identity
AGENT_NAME=Professional Legal AI Agent
AGENT_VERSION=2.0.0
AGENT_DESCRIPTION=Federal Court Quality Document Generation System

# System Behavior
MAX_RETRIES=3
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=1.0
MEMORY_CLEANUP_ENABLED=true

# =============================================================================
# DOCUMENT GENERATION
# =============================================================================

# PDF Generation Settings
PDF_OUTPUT_DIR=output
PDF_PAGE_SIZE=A4
PDF_FONT_FAMILY=Helvetica
PDF_FONT_SIZE_BODY=10
PDF_FONT_SIZE_HEADING=12
PDF_FONT_SIZE_TITLE=14
PDF_MARGIN_TOP=25
PDF_MARGIN_BOTTOM=25
PDF_MARGIN_LEFT=25
PDF_MARGIN_RIGHT=25

# Document Quality
GENERATE_FALLBACK_TEXT=true
INCLUDE_FINANCIAL_SCHEDULES=true
INCLUDE_LEGAL_CLAUSES=true
INCLUDE_ASSET_ANALYSIS=true
INCLUDE_LIABILITY_ANALYSIS=true

# =============================================================================
# LEGAL AND COMPLIANCE
# =============================================================================

# Australian Legal Framework
CORPORATIONS_ACT_YEAR=2001
JURISDICTION=Australia
COURT_TYPE=Federal Court of Australia
REGISTRY=Commercial and Corporations List

# Liquidation Standards
LIQUIDATOR_REGISTRATION_REQUIRED=true
ASIC_COMPLIANCE_ENABLED=true
CREDITOR_PROTECTION_ENABLED=true
EMPLOYEE_ENTITLEMENT_CALCULATIONS=true

# Document Compliance
FEDERAL_COURT_FORMATTING=true
PROFESSIONAL_SIGNATURES=true
LEGAL_CLAUSE_VALIDATION=true
FINANCIAL_ACCURACY_CHECK=true

# =============================================================================
# FINANCIAL CALCULATIONS
# =============================================================================

# Currency and Formatting
CURRENCY_SYMBOL=AUD $
CURRENCY_FORMAT={symbol}{amount:,.2f}
PERCENTAGE_DECIMAL_PLACES=2
FINANCIAL_ROUNDING=2

# Asset Valuation
ASSET_REALIZATION_FACTOR_CASH=1.00
ASSET_REALIZATION_FACTOR_DEBTORS=0.80
ASSET_REALIZATION_FACTOR_INVENTORY=0.60
ASSET_REALIZATION_FACTOR_PLANT=0.40
ASSET_REALIZATION_FACTOR_PROPERTY=0.90
ASSET_REALIZATION_FACTOR_VEHICLES=0.50

# Liability Priorities (per Corporations Act)
PRIORITY_1_SECURED_CREDITORS=true
PRIORITY_2_LIQUIDATOR_COSTS=true
PRIORITY_3_EMPLOYEE_ENTITLEMENTS=true
PRIORITY_4_PREFERENTIAL_CREDITORS=true
PRIORITY_5_UNSECURED_CREDITORS=true
PRIORITY_6_RELATED_PARTY_LOANS=true

# =============================================================================
# SEARCH AND RESEARCH
# =============================================================================

# Web Search Configuration
SEARCH_MAX_RESULTS=10
SEARCH_TIMEOUT=15
SEARCH_ENGINES=google,duckduckgo,wikipedia
SEARCH_RELEVANCE_THRESHOLD=0.6

# Legal Research
LEGAL_RESEARCH_ENABLED=true
CURRENT_LAW_RESEARCH=true
CASE_LAW_INTEGRATION=false
REGULATORY_UPDATES=true

# Search Queries for Legal Research
LEGAL_SEARCH_QUERIES=Australian liquidation procedures 2024,ASIC liquidation requirements,Corporations Act liquidation compliance

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=professional_agent.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Console Logging
CONSOLE_LOG_ENABLED=true
CONSOLE_LOG_LEVEL=INFO
CONSOLE_LOG_COLOR=true

# Performance Monitoring
PERFORMANCE_MONITORING=true
EXECUTION_TIME_TRACKING=true
MEMORY_USAGE_TRACKING=true
ERROR_TRACKING=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Data Protection
ZERO_PERSISTENT_STORAGE=true
MEMORY_CLEANUP_AFTER_USE=true
API_KEY_MASKING=true
SENSITIVE_DATA_ENCRYPTION=false

# Network Security
VERIFY_SSL_CERTIFICATES=true
CONNECTION_TIMEOUT=30
MAX_REDIRECTS=5
USER_AGENT=Professional-AI-Agent/2.0

# =============================================================================
# PROFESSIONAL FEATURES
# =============================================================================

# Customer Management
CUSTOMER_PROFILE_GENERATION=true
INDUSTRY_SPECIFIC_ANALYSIS=true
CONTACT_MANAGEMENT=true
SPECIAL_REQUIREMENTS_TRACKING=true

# Document Types
GENERATE_PROFESSIONAL_AFFIDAVIT=true
GENERATE_LIQUIDATION_RESOLUTION=true
GENERATE_CREDITOR_NOTIFICATION=true
GENERATE_DIRECTOR_STATEMENT=true
GENERATE_ASSET_REALIZATION_NOTICE=true

# Quality Assurance
FEDERAL_COURT_COMPLIANCE_CHECK=true
FINANCIAL_CALCULATION_VALIDATION=true
LEGAL_CLAUSE_VERIFICATION=true
PROFESSIONAL_FORMATTING_CHECK=true

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Development Mode
DEVELOPMENT_MODE=false
DEBUG_MODE=false
TEST_MODE=false
MOCK_API_RESPONSES=false

# Testing Configuration
TEST_OUTPUT_DIR=test_output
TEST_COMPANIES=Tech Solutions Pty Ltd,Manufacturing Corp,Retail Enterprises
TEST_GENERATE_SAMPLE_DATA=true

# Demo Configuration
DEMO_MODE=false
DEMO_ORGANIZATIONS=5
DEMO_DOCUMENTS_PER_ORG=5
DEMO_INCLUDE_RESEARCH=true

# =============================================================================
# ADVANCED FEATURES (OPTIONAL)
# =============================================================================

# AI Enhancement
PROMPT_OPTIMIZATION=true
CONTEXT_ENHANCEMENT=true
INTELLIGENT_FORMATTING=true
AUTO_COMPLIANCE_CHECK=true

# Integration Features
EMAIL_NOTIFICATIONS=false
CALENDAR_INTEGRATION=false
CRM_INTEGRATION=false
DOCUMENT_MANAGEMENT_SYSTEM=false

# Professional Services
MULTI_TENANT_SUPPORT=false
AUDIT_TRAIL=true
COMPLIANCE_REPORTING=true
PROFESSIONAL_BACKUP=true

# =============================================================================
# SYSTEM LIMITS
# =============================================================================

# Processing Limits
MAX_ORGANIZATIONS_PER_REQUEST=10
MAX_DOCUMENTS_PER_ORGANIZATION=10
MAX_DOCUMENT_SIZE_MB=50
MAX_PROCESSING_TIME_MINUTES=30

# Memory Management
MAX_MEMORY_USAGE_MB=2048
GARBAGE_COLLECTION_ENABLED=true
MEMORY_THRESHOLD_WARNING=1536
MEMORY_CLEANUP_INTERVAL=300

# File Management
MAX_OUTPUT_FILES=1000
AUTO_CLEANUP_OLD_FILES=true
FILE_RETENTION_DAYS=30
BACKUP_GENERATED_DOCUMENTS=false 